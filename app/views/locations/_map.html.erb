<% if @location.latitude && @location.longitude != "0" %>
  <div class="col-2-3">
    <iframe
      width="600"
      height="450"
      frameborder="0" style="border:0"
      src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDRij-_j_RS6GJmGscH48MSyfdyYfyYRAs
        &q=<%=@location.latitude + "," + @location.longitude%>
        &zoom=18
        &maptype=satellite">
    </iframe>

  </div>

<div class="col-1-3">
  <div>&nbsp;</div>
  <div>&nbsp;</div>
  <div>&nbsp;</div>
  <div>&nbsp;</div>
  <div>&nbsp;</div>
  <h3>Latitude: <%= @location.latitude %></h3>
  <div>&nbsp;</div>
  <h3>Longitude: <%= @location.longitude %></h3>
  <div>&nbsp;</div>
  <div>&nbsp;</div>
  <div>&nbsp;</div>
  <div>&nbsp;</div>
  <div>&nbsp;</div>
  <div>&nbsp;</div>
</div>

<% elsif @location.street != nil %>
<iframe
  width="600"
  height="450"
  frameborder="0" style="border:0"
  src="https://www.google.com/maps/embed/v1/place?key=AIzaSyDRij-_j_RS6GJmGscH48MSyfdyYfyYRAs
    &q=<%=@location.street + "," + @location.town + "," + @location.state%>
    &zoom=18
    &maptype=satellite">
</iframe>
<br>
<% end %>
