<h1> Create a New Spot </h1>



<%= form_for @location do |f| %>
  <div class="row">
  <div class="large-6 columns">
    <%= f.label :name, class: "form_text" %>
    <%= f.text_field :name, :placeholder => "Give a good spooky name to your discovered spot." %>
  </div>
</div>

<div>&nbsp;</div>

<div>
  <%= f.label :description, class:"form_text" %>
  <%= f.text_area :description, :placeholder => "What's at the spot?  What is there to explore and see?  Any good scares?" %>
</div>

<div>&nbsp;</div>

<div>
  <%= f.label :history, class:"form_text" %>
  <%= f.text_area :history, :placeholder => "Know any history about the spot?  If not leave blank." %>
</div>

<div>&nbsp;</div>

<div class="row">
  <div class="small-1 columns">
    <%= f.label :state, class:"form_text" %>
    <%= f.select :state, %w[AL MT AK NE AZ NV AR NH CA NJ CO NM CT NY DE NC FL ND GA OH HI OK ID OR IL PA IN RI IA SC KS SD KY TN LA TX ME UT MD VT MA VA MI WA MN WV MS WI MO WY]%>
  </div>
</div>

<div>&nbsp;</div>

<div class="row">
  <div class="small-3 columns">
  <%= f.label :town, class:"form_text" %>
  <%= f.text_area :town %>
  </div>
</div>

<div>&nbsp;</div>

<div class="row">
  <div class="small-4 columns">
  <%= f.label :street, class: "form_text" %>
  <%= f.text_area :street, :placeholder => "If applicable" %>
  </div>
</div>

<div>&nbsp;</div>

<div class="row">
  <div class="small-2 columns">
    <%= f.label :size, class: "form_text" %>
    <%= f.select(:size, %w[Tiny Small Moderate Big Huge]) %>
  </div>
</div>

<div>&nbsp;</div>

<div class="row">
  <div class="small-2 columns">
    <%= f.label :private_land, class: "form_text" %>
    <%= f.select(:private_land, ["Unknown", "Yes", "No"]) %>
  </div>
</div>

<div>&nbsp;</div>

<div class="row">
  <div class="small-2 columns">
  <%= f.label :in_use, class: "form_text" %>
  <%= f.select(:in_use, ["Unknown", "Yes", "No"]) %>
  </div>
</div>
<div>&nbsp;</div>

<div>
  <%= f.submit "Submit", class: "button alert expand" %>
</div>
<div>&nbsp;</div>
<div>&nbsp;</div>
<div>&nbsp;</div>

<% end %>
