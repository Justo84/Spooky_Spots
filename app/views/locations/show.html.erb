<!DOCTYPE html>
<html>

<h1><%= @location.name %></h1>
<h6 align="right">Added by:&nbsp; <%= @location.user.username %> </h6>

<div class="grid">

  <div class="col-2-3">
    <div class="location">
      <h3><%= @location.description %></h3>
    </div>
  </div>

  <div class="col-1-3">
    <h4>State: </h4>
    <h5><%= @location.state %></h5>
    <h4>Town: </h4>
    <h5><%= @location.town %></h5>
    <% if @location.street != nil %>
      <h4>Street: </h4>
      <h5><%= @location.street %> </h5>
    <% end %>
    <div>&nbsp;</div>
  </div>

  <div class="col-2-3">
    <h4>History: </h4>
    <h5><%= @location.history %></h5>
  </div>

  <div class="col-1-3">
    <h4>Size: </h4>
    <h5><%= @location.size %></h5>
    <h4>Private Land: </h4>
    <h5><%= @location.private_land %></h5>
    <h4>In Use: </h4>
    <h5><%= @location.in_use %></h5>
  </div>

  <%= render partial: "locations/map" %>

</div>

<div>&nbsp;</div>
<div>&nbsp;</div>

<% if @sce_average && @spo_average && @exp_average != nil %>
  <h4> Average Ratings: </h4>
  <h2 align="center">Spookiness: <%=@spo_average.round(1)%> &nbsp;&nbsp;&nbsp;&nbsp;  Scenery: <%=@sce_average.round(1)%> &nbsp;&nbsp;&nbsp;&nbsp; Exploration: <%=@exp_average.round(1)%> </h2>
<% else %>
  <h4> No Ratings Yet </h4>

<% end %>

<div>&nbsp;</div>

<% if @location.endorsed == true %>
  <h4> Endorsed By Spooky Spots </h4>
<% end %>
<div>&nbsp;</div>


<% if @user && @user.role == "admin" %>
    <% if @location.endorsed == false %>
      <%= form_for [:admin, @location] do |f| %>
        <%= f.hidden_field :endorsed, value: true %>
        <%= f.submit "Endorse Location", class: "button success tiny" %>
      <% end %>
    <% elsif @location.endorsed == true %>
      <%= form_for [:admin, @location] do |f| %>
        <%= f.hidden_field :endorsed, value: false %>
        <%= f.submit "Un-Endorse Location", class: "button alert tiny" %>
      <% end %>
    <% end %>
<% end %>

<% if @user && (@user == @location.user || @user.role == "admin") %>
  <%= link_to "Edit Location", edit_location_path(@location), class: "button tiny" %>
<% end %>

<% if @user && @user.role == "admin" %>
  <%= button_to "Delete Location",
  location_path(@location),
  method: :delete,
  action: :destroy,
  class: "button alert tiny"%>
<% end %>

<div>&nbsp;</div>

<ul class="small-block-grid-3">
  <% @location.location_images.each do |location_image| %>
  <li><%= image_tag(location_image.image.url, alt: location_image.description) %><%= location_image.description %>
    <% if @user && (@user == location_image.user || @user.role == "admin") %><%= button_to "Delete image",
    location_location_image_path(@location, location_image),
    method: :delete,
    action: :destroy,
    class: "button alert tiny"%></li>
    <% end %>
  <% end %>
</ul>

<% if @user %>
  <div>&nbsp;</div>
  <div>Upload a photo of <%= @location.name %></div>
  <%= form_for [@location, @image] do |f| %>
    <div>
      <%= f.label :image, "Image Select", class:"image_select" %>
      <%= f.file_field :image %>
    </div>
    <div>
      <div class="small-4 columns">
        <%= f.label :description, "Image Description", class:"form_text" %>
        <%= f.text_field :description %>
      </div>
    </div>
    <br>
    <%= f.hidden_field :location_id, value: @location.id %>
    <%= f.submit "Add photo", class: "button alert tiny" %>
  <% end %>
  </div>
  <br>
  <div>&nbsp;</div>
<% else %>
  <div>&nbsp;</div>
  Sign in to add photos
  <div>&nbsp;</div>
<% end %>

<% if @user %>
<%= button_to "Review this Location", new_location_review_path(@location), method: "get", class: "button success tiny" %>
<% else %>
Sign in to review <%= @location.name %>
<div>&nbsp;</div>
<% end %>

<%= render partial: "reviews/show", locals: { location: @location } %>

<div>&nbsp;</div>
<div>&nbsp;</div>
<div>&nbsp;</div>

</html>
