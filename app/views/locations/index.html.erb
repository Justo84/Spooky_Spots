<br>
<div align="center"> <h1> Spooky Spots! </h1> </div>
<div align="center"> <h6> Share Your Scares </h6> </div>
<br>

<%= form_tag(locations_path, method: "get") do %>
  <%= text_field_tag(:search, params[:search], placeholder: "Search Locataions") %>
<%= submit_tag "Search", class: "button" %>
<% end %>


<br>
<% @locations.each do |location| %>
  <h3><%= link_to location.name, location_path(location.id) %> - <%= location.town %>, <%= location.state %></h3>
<% end %>
